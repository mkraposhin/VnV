FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "control.include"

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         1e-2;

deltaT          5.0e-6;

writeControl    adjustableRunTime;

writeInterval   1e-2;

cycleWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  false;

maxDeltaT       1;

