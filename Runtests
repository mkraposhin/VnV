#!/usr/bin/bash

#
#The list of solvers for testing is expected to be initialized
#before calling the script

source Parameters
all_files=`ls`

for solver in $studied_solvers
do
    echo "$solver" > $solver-report.md
    echo "=======" >> $solver-report.md
done

for file_name in $all_files
do
    exclude_file=`echo "$exc_files" | grep "$file_name" -o`
    if [ -d "$file_name" ] && [ "$exclude_file" = ""  ]
    then
        cd $file_name
        echo "$file_name"
        for solver in $studied_solvers
        do
            ./Runtest $file_name $solver
            if [ -f $solver.md ]
            then
                echo "" >> ../reports/$solver-report.md
                cat $solver.md >> ../reports/$solver-report.md
            fi
        done
        cd ../
    fi
done


#
#END-OF-FILE
#
