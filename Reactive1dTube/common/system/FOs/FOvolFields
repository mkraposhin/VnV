{
    // Mandatory entries
    type            Q;
    libs            (fieldFunctionObjects);

    // Optional (inherited) entries
    field           U;
    //result          QField;

    region          region0;
    enabled         true;
    log             true;
    timeStart       $tTurFields;
    timeEnd         $tEndTime;
    executeControl  onEnd; //writeTime;
    executeInterval -1;
    writeControl    onEnd; //writeTime;
    writeInterval   -1;
}

