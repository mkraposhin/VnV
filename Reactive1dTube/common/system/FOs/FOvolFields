CourantNo
{
    // Mandatory entries
    type            CourantNo;
    libs            (fieldFunctionObjects);

    // Optional entries
    rho             rho;

    // Optional (inherited) entries
    field           phi;
    //result          CourantNumberField;

    region          region0;
    enabled         true;
    log             true;
    timeStart       $tTurFields;
    timeEnd         $tEndTime;
    executeControl  onEnd; //writeTime;
